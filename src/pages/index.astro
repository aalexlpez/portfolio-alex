	// Copy email functionality
	document.addEventListener('DOMContentLoaded', function() {
		const copyEmailBtn = document.getElementById('copyEmailContactBtn');
		const emailTooltip = document.getElementById('emailContactTooltip');
		
		if (copyEmailBtn && emailTooltip) {
			copyEmailBtn.addEventListener('click', async function() {
				const email = 'aalexlpez@gmail.com';
				
				try {
					await navigator.clipboard.writeText(email);
					
					// Show tooltip
					emailTooltip.classList.remove('opacity-0');
					emailTooltip.classList.add('opacity-100');
					
					// Hide tooltip after 2 seconds
					setTimeout(() => {
						emailTooltip.classList.remove('opacity-100');
						emailTooltip.classList.add('opacity-0');
					}, 2000);
				} catch (err) {
					console.error('Error copying email: ', err);
				}
			});
		}

		// Download CV and open online functionality
		const downloadCvBtn = document.getElementById('downloadCvBtn');
		
		if (downloadCvBtn) {
			downloadCvBtn.addEventListener('click', function() {
