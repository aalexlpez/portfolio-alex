<script>
    document.addEventListener('DOMContentLoaded', function() {
        const header = document.getElementById('header');
        let lastScrollY = window.scrollY;
        
        function updateHeader() {
            const currentScrollY = window.scrollY;
            
            if (header) {
                if (currentScrollY <= 50) {
                    // En el top - integrado al fondo
                    header.style.transform = 'scale(1.1)';
                    header.querySelector('nav')!.style.background = 'transparent';
                    header.querySelector('nav')!.style.backdropFilter = 'none';
                    header.querySelector('nav')!.style.border = 'none';
                    header.querySelector('nav')!.style.padding = '1rem 1.5rem';
                } else {
                    // Con scroll - badge estilizado
                    header.style.transform = 'scale(0.9)';
                    header.querySelector('nav')!.style.background = 'rgba(255, 255, 255, 0.05)';
                    header.querySelector('nav')!.style.backdropFilter = 'blur(16px)';
                    header.querySelector('nav')!.style.border = '1px solid rgba(255, 255, 255, 0.1)';
                    header.querySelector('nav')!.style.padding = '0.5rem 1rem';
                }
            }
            
            lastScrollY = currentScrollY;
        }
        
        // Ejecutar al cargar y al hacer scroll
        updateHeader();
        window.addEventListener('scroll', updateHeader, { passive: true });
        
        // Smooth scrolling para todos los enlaces de navegación (desktop y mobile)
        const navLinks = document.querySelectorAll('a[href^="#"]');
        
        navLinks.forEach(link => {
            link.addEventListener('click', function(e: Event) {
                e.preventDefault();
                const target = e.currentTarget as HTMLAnchorElement;
                const targetId = target.getAttribute('href');
                const targetSection = document.querySelector(targetId!);
                
                if (targetSection) {
                    const headerHeight = 100; // Espacio para el header
                    const targetPosition = targetSection.getBoundingClientRect().top + window.scrollY - headerHeight;
                    
                    window.scrollTo({
                        top: targetPosition,
                        behavior: 'smooth'
                    });
                }
            });
        });
    });
</script>
